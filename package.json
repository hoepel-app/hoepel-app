{
  "name": "@hoepel.app/monorepo",
  "version": "0.0.1",
  "description": "hoepel.app monorepo",
  "repository": "git@github.com:hoepel-app/hoepel-app.git",
  "author": "Thomas Toye <thomas@toye.io>",
  "license": "GPL-3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build packages",
    "clean": "yarn build --clean",
    "lint": "yarn eslint '**/*.{ts,js}' --ignore-path .gitignore --cache",
    "lint-fix": "yarn lint --fix",
    "pretest": "yarn clean && yarn build",
    "test": "yarn lint && lerna run test",
    "publish": "echo TODO publish step",
    "predeploy": "yarn test",
    "deploy": "yarn run publish && yarn deploy:firestore",
    "deploy:firestore": "firebase deploy --project=hoepel-app --only=firestore:rules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "prettier": "1.19.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
